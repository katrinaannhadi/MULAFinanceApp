<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mula_yellow_500">

    <TextView
        android:id="@+id/listItemHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textAppearance="@style/TextAppearance.Mula.Body1"
        android:textColor="@color/mula_purple_dark_primary"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/listItemHabitCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/mula_purple_dark_primary"
        android:focusable="false"
        android:textColor="@color/mula_purple_dark_primary" />
</LinearLayout>